/* pages/detail/detail.wxss */

.title {
  display: block;
  text-align: center;
  font-size: 50rpx;
  font-weight: 500;
  margin: 10rpx 0;
}




scroll-view {
  width: 100%;
  height: 100vh;
}

/* margin updown, leftright;*/
swiper {
  width: 100%;
  height: 490rpx;
  margin: 0,16rpx;
}
swiper video,image {
  width: 100%;
  border-radius: 16rpx;
}



.info {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: rgb(250,105,226);
}
.info text {
  font-size: 40rpx;
  color: white;
  line-height: 80rpx;
}




.bottom {
position: absolute;
bottom: -100rpx;
left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: orangered;
}

.bottom buttom {
  width: 100%;
  color: white;
  background-color:orangered;
}



