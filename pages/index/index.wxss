/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;

  /* padding: 0 9rpx; */
}


.container swiper {
  width: 100%;
}
 swiper swiper-item {
  width: 100%;
}
image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
} 

.hot {
  scroll-padding-top: 10rpx;
  border-top-color: pink;
  display: block;
  text-align: center;
  margin: 10rpx 0;
}


.wrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: #666;
}

.wrap .product {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 0 10rpx;
  background-color: orange;
}

.product image {
    width: 100%;

}

.info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.name {
    color: white;
}
.info .year {
  color: white ;
}